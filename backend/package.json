{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend Service",
  "license": "SEE LICENSE IN ../LICENSE",
  "author": "KanaeRudo00",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx src/main.ts",
    "start": "tsx src/main.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky install",
    "precommit": "lint-staged"
