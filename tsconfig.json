{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2020",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
}